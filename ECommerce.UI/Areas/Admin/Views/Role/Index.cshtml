@using ECommerce.DtoLayer.Dtos.AppRoleDtos;
@model List<ResultAppRoleDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="col-12">
    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Rol Adı</th>
                    <th>Sil</th>
                    <th>Güncelle</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Role</td>
                        <td>
                            <a href="/Admin/Role/DeleteRole/@item.Id" class="btn btn-danger" id="DeleteBtn"
                               onclick="return confirm('Silmek istediğinize emin misiniz?');">Sil</a>
                        </td>
                       
                        <td><a href="/Admin/Role/UpdateRole/@item.Id" class="btn btn-success ">Güncelle</a></td> 
                        
                    </tr>
                }
            </tbody>
        </table>
        <a href="/Admin/Role/UserRoleList" class="btn btn-primary col-12 mb-2">Kullanıcı Rol Listesi</a>
    </div>
</div>

<a href="/Admin/Role/AddRole" class="btn btn-outline-info">Yeni Rol Ekle</a>

